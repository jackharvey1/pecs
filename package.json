{
  "name": "pecs",
  "version": "0.1.0",
  "private": true,
  "homepage" : "https://s3.eu-west-2.amazonaws.com/jack-pecs/",
  "dependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-scripts": "1.1.5",
    "styled-components": "^3.4.5"
  },
  "devDependencies": {
    "enzyme": "^3.5.1",
    "enzyme-adapter-react-16": "^1.3.1",
    "eslint": "^5.4.0",
    "eslint-plugin-react": "^7.11.1",
    "jest-enzyme": "^6.0.4",
    "jest-styled-components": "^6.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "jest": "react-scripts test --env=jsdom",
    "lint": "eslint src",
    "test": "yarn lint && yarn jest --coverage",
    "eject": "react-scripts eject"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!src/stories/**/*.stories.js",
      "!src/index.js",
      "!src/registerServiceWorker.js",
      "!src/assets/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coverageReporters": [
      "text",
      "lcov"
    ]
  }
}
